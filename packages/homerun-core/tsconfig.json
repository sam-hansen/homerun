{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2018",
        "lib": ["ES2018", "DOM"],
        "types": ["node"],
        "rootDir": "src",
        "jsx": "react",
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "importHelpers": true
    },
    "exclude": ["node_modules", "dist"]
}
